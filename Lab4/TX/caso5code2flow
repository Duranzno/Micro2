
caso4();
while(escape==0){
	Actualizar Pantalla;
	while(!HID_Read());
	switch(readbuff){
		case X:
		SPI1_Write("X");//Iniciar Reloj
		break;
		case Y:
		SPI1_Write("Y");
		programar_RTCC();
		break;
		case Z:
		programar_Alarma();
		break;
		case default:
		escape++;
		SPI_ESC();
		break;
	}
}
return;
